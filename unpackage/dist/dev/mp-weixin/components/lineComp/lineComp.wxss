.line {
  text-align: center;
  font-size: 20rpx;
  color: #8A8A8A;
  padding: 30rpx 0;
}
.line text {
  position: relative;
  color: #8A8A8A;
  padding: 25rpx;
}
.line text:before, .line text:after {
  display: block;
  content: "";
  position: absolute;
  width: 200rpx;
  height: 1px;
  background: #E5E5E5;
}
.line text:before {
  top: 40rpx;
  left: -190rpx;
}
.line text:after {
  top: 40rpx;
  right: -190rpx;
}

