.container {
  background: #fff;
  padding: 30rpx;
}
.container .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container .header .title {
  font-size: 30rpx;
  font-weight: bold;
}
.container .header .rate {
  font-size: 20rpx;
  color: #8a8a8a;
}
.container .tags_container {
  height: 85rpx;
}
.container .tags_container scroll-view {
  height: 100%;
}
.container .tags {
  margin: 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .tags view {
  white-space: nowrap;
  margin-right: 20rpx;
  background: #FFE4E1;
  border-radius: 30rpx;
  font-size: 20rpx;
  padding: 10rpx 25rpx;
}
.container .evaluation {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 10rpx;
}
.container .evaluation .item {
  -webkit-transform: translateY(-10rpx);
          transform: translateY(-10rpx);
  margin-right: 20rpx;
  padding: 30rpx;
  min-width: 400rpx;
  border: 1px solid #ccc;
  border-radius: 30rpx;
}
.container .evaluation .h {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .evaluation .h .head {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #e6e6e6;
  margin-right: 20rpx;
}
.container .evaluation .h .head image {
  width: 100%;
  height: 100%;
}
.container .evaluation .h .info .name {
  font-size: 24rpx;
}
.container .evaluation .h .info .time {
  padding-top: 6rpx;
  font-size: 20rpx;
  color: #ccc;
}
.container .evaluation .c {
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #8a8a8a;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container .evaluation .imgs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .evaluation .imgs view {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}
.container .evaluation .imgs view image {
  border-radius: 15rpx;
  width: 100%;
  height: 100%;
}

