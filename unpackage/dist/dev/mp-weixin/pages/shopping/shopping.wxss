.shop .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  text-align: center;
  font-size: 30rpx;
  border-bottom: 1px solid #E5E5E5;
  padding: 30rpx 0;
}
.shop .title .iconfont {
  position: absolute;
  left: 30rpx;
}
.shop .title .text {
  margin: 0 auto;
}
.shop .title .edit {
  position: absolute;
  right: 30rpx;
