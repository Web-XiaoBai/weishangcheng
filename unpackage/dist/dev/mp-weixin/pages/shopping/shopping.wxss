  margin-left: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.shop .order .uni-list-cell .order_info image {
  border: 2rpx solid #E5E5E5;
  width: 120rpx;
  height: 120rpx;
}
.shop .order .uni-list-cell .order_info .info {
  margin-left: 30rpx;
}
.shop .order .uni-list-cell .order_info .info .name {
  font-size: 28rpx;
  padding: 0;
}
.shop .order .uni-list-cell .order_info .info .specific {
  color: #8A8A8A;
