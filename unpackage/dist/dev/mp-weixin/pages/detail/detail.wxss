page {
  background: #F8F8F8;
  margin-bottom: 100rpx;
}
.goodsDetail {
  background: #FFFFFF;
  margin-bottom: 20rpx;
}
.goodsDetail swiper {
  width: 750rpx;
  height: 600rpx;
}
.goodsDetail swiper image {
  width: 100%;
  height: 100%;
}
.goodsDetail .goodsInfo {
  border-top: 1px solid #E5E5E5;
  padding: 30rpx;
}
.goodsDetail .goodsInfo .tit {
  color: #333333;
  font-size: 35rpx;
  padding: 10rpx 0;
}
.goodsDetail .goodsInfo .info {
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #8A8A8A;
}
.goodsDetail .goodsInfo .info text:nth-child(1) {
  color: #FF4400;
}
.goodsDetail .goodsInfo .price {
  padding: 10rpx 0;
  color: #FF4400;
  font-size: 46rpx;
}
.goodsDetail .goodsInfo .price .symbol {
  font-size: 26rpx;
}
.goodsDetail .goodsInfo .price text:nth-child(2) {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #8A8A8A;
  text-decoration: line-through;
}
.goodsDetail .params .param_info {
  height: 300rpx;
  background: #FFFFFF;
}

